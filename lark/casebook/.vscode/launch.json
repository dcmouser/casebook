            "request": "launch",
            "program": "./code/main.py",
            "args": ["./code/grammar/casebook_grammar.lark", "./code/grammar/wrongbook.casebook"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONUNBUFFERED": "0" }
        },
        {
            "name": "PARTIAL WrongBook CaseBook",
            "preLaunchTask": "Clear terminal",
            "type": "debugpy",
            "request": "launch",
            "program": "./code/main.py",
