    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "preLaunchTask": "Clear terminal",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Test CaseBook grammar",
            "preLaunchTask": "Clear terminal",
            "type": "debugpy",
            "request": "launch",
            "program": "./code/main.py",
            "args": ["./code/grammar/casebook_grammar.lark", "./code/grammar/grammar_test.casebook"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONUNBUFFERED": "0" }
        },
        {
            "name": "Compile WrongBook CaseBook",
            "preLaunchTask": "Clear terminal",
